{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC Tests (Debug)",
            "type": "shell",
            "command": "g++-10",
            "args": [
                "-std=c++2a",
                "-Wall",
                "-I${workspaceRoot}/../../include",
                "${workspaceFolder}/src/tests/main.cpp",
                "-o",
                "${workspaceFolder}/src/tests/tests.out",
                "--debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/tests"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "test",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "GCC Tests (Release)",
            "type": "shell",
